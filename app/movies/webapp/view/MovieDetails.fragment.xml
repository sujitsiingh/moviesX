<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="movieDialog"
        title="{title}"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer"
        stretch="true"
        draggable="true"
        resizable="true"
    >
        <VBox
            id="_IDGenVBox10"
            class="sapUiSmallMargin"
        >
            <Text
                id="_IDGenText"
                text="🎬 {title}"
                class="sapUiTinyMarginBottom sapMTitle sapUiMediumMarginTop"
            />
            <Text
                id="_IDGenText15"
                text="🕴️ Casting: {casting}"
                class="sapUiTinyMarginBottom"
            />
            <Text
                id="_IDGenText31"
                text="📝 Overview: {overview}"
                class="sapUiTinyMarginBottom"
            />
            <Text
                id="_IDGenText16"
                text="⭐ Rating: {avgRating}"
                class="sapUiTinyMarginBottom"
            />
            <Text
                id="_IDGenText23"
                text="📅 Release Year: {releaseYear}"
                class="sapUiTinyMarginBottom"
            />
            <Text
                id="_IDGenText27"
                text="⏱️ Running Time: {runtimeMin} minutes"
                class="sapUiTinyMarginBottom"
            />

            <SegmentedButton
                id="watchStatusSelector"
                selectionChange="onWatchStatusChange"
                class="sapUiSmallMarginBottom sapUiSmallMarginTop"
            >
                <items>
                    <SegmentedButtonItem
                        id="_IDGenSegmentedButtonItem1"
                        text="Already Watched?"
                        key="watched"
                        icon="sap-icon://sys-enter"
                    />
                    <SegmentedButtonItem
                        id="_IDGenSegmentedButtonItem2"
                        text="Want to Watch"
                        key="wantToWatch"
                        icon="sap-icon://bookmark-2"
                    />
                </items>
            </SegmentedButton>
            <Button
                id="_IDGenButton4"
                text="Add to My Watchlist"
                press="onAddToWatchlist"
            />

            <!-- <Text
                id="_IDGenText28"
                text="🎭 Genre: {path: '/Genres/name'}"
                class="sapUiMediumMarginBottom"
            /> -->
            <Link
                id="_IDGenLink1"
                text="🔗 Homepage"
                href="{homepage}"
                target="_blank"
                class="sapUiTinyMarginBottomapMTitle"
            />

            <Label
                id="_IDGenLabel12"
                text="Reviews by the users"
                class="sapUiMediumMarginTop"
            />

            <List
                id="_IDGenList"
                items="{reviews}"
            >
                <StandardListItem
                    id="_IDGenStandardListItem"
                    counter="{= ${/Reviews/name}.indexOf(${}) + 1 }"
                    title="{name}"
                    description="{comment}"
                    info="{rating} ⭐"
                    infoState="Success"
                />
            </List>
        </VBox>

        <endButton>
            <Button
                id="_IDGenButton13"
                text="Close"
                press="onCloseDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
