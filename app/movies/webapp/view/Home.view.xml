<mvc:View
    controllerName="movies.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <Breadcrumbs
            id="_IDGenBreadcrumbs"
            currentLocationText="Add new item"
        >
            <Link
                id="_IDGenLink"
                text="Master"
            />
        </Breadcrumbs>

        <HBox id="_IDGenHBox">
            <VBox id="_IDGenVBox1" >
                <Label id="_IDGenLabel1" text="title" />
                <Input id="_IDGenInput1" placeholder="Enter Title of the movie" />
            </VBox>
            <VBox id="_IDGenVBox2" >
                <Label id="_IDGenLabel2" text="overview" />
                <Input id="_IDGenInput2" placeholder="Enter overview of the movie" />
            </VBox>
            <VBox id="_IDGenVBox3" >
                <Label id="_IDGenLabel3" text="releaseYear" />
                <Input id="_IDGenInput3" placeholder="Enter release year of the movie" />
            </VBox>
        </HBox>

        <HBox id="_IDGenHBox1" >
            <VBox id="_IDGenVBox4" >
                <Label id="_IDGenLabel4" text="runtimeMin" />
                <Input id="_IDGenInput4" placeholder="Enter run time(mins)" />
            </VBox>
            <VBox id="_IDGenVBox5" >
                <Label id="_IDGenLabel5" text="currency" />
                <Input id="_IDGenInput5" placeholder="Enter currency" />
            </VBox>
            <VBox id="_IDGenVBox" ></VBox>
                <Label id="_IDGenLabel6" text="homepage" />
        </HBox>


    </Page>
</mvc:View>
