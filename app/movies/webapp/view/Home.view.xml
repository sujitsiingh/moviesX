<mvc:View
    controllerName="movies.controller.Login"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <!-- tool header of the page -->
        <tnt:ToolHeader
            id="shellLikeToolHeader"
            class="sapUiTinyMargin"
        >
            <Button
                id="_IDGenButton3"
                icon="sap-icon://menu2"
                type="Transparent"
                tooltip="Menu"
                press=".onCollapseExpandPress"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        id="_IDGenOverflowToolbarLayoutData"
                        priority="NeverOverflow"
                    />
                </layoutData>
            </Button>
            <Title
                text="MoviesX"
                wrapping="false"
                id="productName"
            >
                <layoutData>
                    <OverflowToolbarLayoutData
                        id="_IDGenOverflowToolbarLayoutData2"
                        priority="Disappear"
                    />
                </layoutData>
            </Title>
            <ToolbarSpacer id="_IDGenToolbarSpacer1" />

            <!-- menu items for theme -->
            <MenuButton
                id="_IDGenMenuButton"
                text="Theme"
                type="Transparent"
                buttonMode="Split"
            >
                <menu>
                    <Menu
                        id="_IDGenMenu"
                        itemSelected=".onMenuItem"
                    >
                        <items>
                            <MenuItem
                                id="_IDGenMenuItem6"
                                text="Morning Horizon"
                            >
                                <customData>
                                    <core:CustomData
                                        id="_IDGenCustomData1"
                                        key="action"
                                        value="onThemeMH"
                                    />
                                </customData>
                            </MenuItem>
                            <MenuItem
                                id="_IDGenMenuItem7"
                                text="Evening Horizon (dark)"
                            >
                                <customData>
                                    <core:CustomData
                                        id="_IDGenCustomData2"
                                        key="action1"
                                        value="onThemeEve"
                                    />
                                </customData>
                            </MenuItem>
                            <MenuItem
                                id="_IDGenMenuItem3"
                                text="Quartz Light"
                            >
                                <customData>
                                    <core:CustomData
                                        id="_IDGenCustomData3"
                                        key="action2"
                                        value="onThemeQL"
                                    />
                                </customData>
                            </MenuItem>
                            <MenuItem
                                id="_IDGenMenuItem4"
                                text="Quartz Dark"
                            >
                                <customData>
                                    <core:CustomData
                                        id="_IDGenCustomData4"
                                        key="action3"
                                        value="onThemeQD"
                                    />
                                </customData>
                            </MenuItem>
                        </items>
                    </Menu>
                </menu>
            </MenuButton>

            <tnt:ToolHeaderUtilitySeparator
                id="_IDGenToolHeaderUtilitySeparator"
            />
            <VBox id="profileDropdown"  class="sapUiSmallMargin">
                <Button id="profile_button" text="Welcome, {userModel>/username}" press=".profile_dropdown"></Button>
            </VBox>
        </tnt:ToolHeader>

        <!-- side navigation -->
        <HBox id="_IDGenHBox3">
            <!-- side bar -->
            <VBox id="_IDGenVBox7">
                <tnt:SideNavigation
                    id="sideNavigation"
                    selectedKey="walked"
                    expanded="false"
                >
                    <tnt:NavigationList id="_IDGenNavigationList">
                        <tnt:NavigationListItem
                            id="_IDGenNavigationListItem1"
                            text="Home"
                            icon="sap-icon://home"
                            press=".onHomePress"
                        />
                        <tnt:NavigationListGroup
                            id="_IDGenNavigationListGroup"
                            text="New"
                        >
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem2"
                                text="Add New Movie"
                                icon="sap-icon://people-connected"
                                press=".onAddMoviesPress"
                            />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListGroup
                            id="_IDGenNavigationListGroup1"
                            text="Recently used"
                        >
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem8"
                                text="View Movies"
                                icon="sap-icon://kpi-managing-my-area"
                                press=".onViewMoviesPress"
                            />
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem9"
                                text="Reviews"
                                icon="sap-icon://flight"
                                key="reviews"
                                press=".onReviewsPress"
                            />
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem10"
                                text="Map"
                                icon="sap-icon://map-2"
                            />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListGroup
                            id="_IDGenNavigationListGroup2"
                            text="Restricted"
                            enabled="false"
                        >
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem11"
                                text="Running"
                                icon="sap-icon://physical-activity"
                            />
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem12"
                                text="Scissors"
                                icon="sap-icon://scissors"
                            />
                        </tnt:NavigationListGroup>
                        <tnt:NavigationListItem
                            id="_IDGenNavigationListItem13"
                            text="Transport"
                            icon="sap-icon://passenger-train"
                        />
                    </tnt:NavigationList>
                    <tnt:fixedItem>
                        <tnt:NavigationList id="_IDGenNavigationList1">
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem14"
                                text="Movie Slate"
                                icon="sap-icon://tri-state"
                                press=".onViewMovieSlatePress"
                            />
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem15"
                                selectable="false"
                                href="https://sap.com"
                                target="_blank"
                                text="External Link"
                                icon="sap-icon://attachment"
                            />
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem16"
                                selectable="false"
                                href="https://sap.com"
                                target="_top"
                                text="External Link _top"
                                icon="sap-icon://attachment"
                            />
                            <tnt:NavigationListItem
                                id="_IDGenNavigationListItem17"
                                text="Compare"
                                icon="sap-icon://compare"
                            />
                        </tnt:NavigationList>
                    </tnt:fixedItem>
                </tnt:SideNavigation>
            </VBox>

            <VBox id="_IDGenVBox8">
                <!-- Panel 1 -->
                <Panel
                    id="panel1"
                    width="50rem"
                    class="sapUiResponsiveMargin"
                    accessibleRole="Region"
                    visible="false"
                >
                    <headerToolbar>
                        <OverflowToolbar id="_IDGenOverflowToolbar">
                            <Title
                                id="_IDGenTitle"
                                text="Add New Movies.."
                            />
                        </OverflowToolbar>
                    </headerToolbar>
                    <Breadcrumbs
                        id="_IDGenBreadcrumbs"
                        currentLocationText="Add new item"
                    >
                        <Link
                            id="_IDGenLink"
                            text="Master"
                        />
                    </Breadcrumbs>

                    <HBox id="_IDGenHBox">
                        <VBox id="_IDGenVBox1">
                            <Label
                                id="_IDGenLabel1"
                                text="title"
                            />
                            <Input
                                id="_IDGenInput1"
                                placeholder="Enter Title of the movie"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox2">
                            <Label
                                id="_IDGenLabel2"
                                text="overview"
                            />
                            <Input
                                id="_IDGenInput2"
                                placeholder="Enter overview of the movie"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox3">
                            <Label
                                id="_IDGenLabel3"
                                text="releaseYear"
                            />
                            <Input
                                id="_IDGenInput3"
                                placeholder="Enter release year of the movie"
                            />
                        </VBox>
                    </HBox>

                    <HBox id="_IDGenHBox1">
                        <VBox id="_IDGenVBox4">
                            <Label
                                id="_IDGenLabel4"
                                text="runtimeMin"
                            />
                            <Input
                                id="_IDGenInput4"
                                placeholder="Enter run time(mins)"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox5">
                            <Label
                                id="_IDGenLabel5"
                                text="Reviews"
                            />
                            <Input
                                id="_IDGenInput5"
                                placeholder="Enter reviews"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox6">
                            <Label
                                id="_IDGenLabel6"
                                text="cast"
                            />
                            <Input
                                id="_IDGenInput6"
                                placeholder="Enter cast name"
                            />
                        </VBox>
                    </HBox>

                    <HBox id="_IDGenHBox2">
                        <VBox id="_IDGenVBox">
                            <Label
                                id="_IDGenLabel7"
                                text="currency"
                            />
                            <Input
                                id="_IDGenInput7"
                                value="{currency}"
                                showValueHelp="true"
                                valueHelpRequest=".onCurrencyVH"
                                maxLength="3"
                                placeholder="Select currency"
                            />
                        </VBox>
                    </HBox>
                    <HBox id="_IDGenHBox5">
                        <VBox id="_IDGenVBox9">
                            <Button
                                id="_IDGenButton1"
                                text="Add Me"
                                press=".onAddMe"
                            />
                        </VBox>
                    </HBox>
                </Panel>

                <!-- Panel 2 -->
                <Panel
                    id="panel2"
                    headerText="All Moviews View"
                    visible="false"
                >
                    <!-- <Label id="_IDGenLabel" text="Enter the details of the movie" /> -->
                    <Table
                        id="booksTable"
                        items="{path: '/Movies', parameters: {
                            $count: false,
                            $$groupId: '$direct'
                        }}"
                    >
                        <columns>
                            <Column id="_IDGenColumn">
                                <Text
                                    id="_IDGenText1"
                                    text="Title"
                                />
                            </Column>
                            <Column id="_IDGenColumn1">
                                <Text
                                    id="_IDGenText2"
                                    text="Overview"
                                />
                            </Column>
                            <Column id="_IDGenColumn2">
                                <Text
                                    id="_IDGenText3"
                                    text="Release Year"
                                />
                            </Column>
                            <Column id="_IDGenColumn3">
                                <Text
                                    id="_IDGenText4"
                                    text="Runtime (min)"
                                />
                            </Column>
                            <Column id="_IDGenColumn4">
                                <Text
                                    id="_IDGenText5"
                                    text="Currency"
                                />
                            </Column>
                            <Column id="_IDGenColumn5">
                                <Text
                                    id="_IDGenText6"
                                    text="Reviews"
                                />
                            </Column>
                            <!-- <Column id="_IDGenColumn6">
                                <Text id="_IDGenText7"  text="Cast"/>
                            </Column> -->
                            <Column id="_IDGenColumn7">
                                <Text
                                    id="actionText"
                                    text="Action"
                                />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDGenColumnListItem">
                                <cells>
                                    <Text
                                        id="_IDGenText8"
                                        text="{title}"
                                    />
                                    <Text
                                        id="_IDGenText9"
                                        text="{overview}"
                                    />
                                    <Text
                                        id="_IDGenText10"
                                        text="{releaseYear}"
                                    />
                                    <Text
                                        id="_IDGenText11"
                                        text="{runtimeMin}"
                                    />
                                    <Text
                                        id="_IDGenText12"
                                        text="{currency_code}"
                                    />
                                    <Text
                                        id="_IDGenText13"
                                        text="{numReviews}"
                                    />
                                    <!-- <Text id="_IDGenText12" text="{= ${cast} ? ${cast}.join(', ') : ''}"/> -->
                                    <!-- <Text id="_IDGenText14" text="{ path: 'cast', formatter: '.formatCast' }"/> -->
                                    <!-- <VBox id="_IDGenVBox10" items="{path: 'cast'}"><items><Text id="_IDGenText" text="{.}"/></items></VBox> -->

                                    <!-- <HBox id="_IDGenHBox4" class="commaSeparated" items="{path: 'cast'}">
                                        <items>
                                            <Text id="_IDGenText14" text="{.}" />
                                        </items>
                                    </HBox> -->
                                    <Button
                                        id="_IDGenButton2"
                                        icon="sap-icon://action"
                                        text="Click Me"
                                        press="onActionPress($event)"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Panel>

                <!-- Panel 3 -->
                <Panel
                    id="panel3"
                    width="50rem"
                    class="sapUiResponsiveMargin"
                    accessibleRole="Region"
                    visible="false"
                >
                    <headerToolbar>
                        <OverflowToolbar id="_IDGenOverflowToolbar3">
                            <Title
                                id="_IDGenTitle3"
                                text="Movies.."
                            />
                        </OverflowToolbar>
                    </headerToolbar>
                    <Breadcrumbs
                        id="_IDGenBreadcrumbs3"
                        currentLocationText="Edit the Entries.."
                    >
                        <Link
                            id="_IDGenLink3"
                            text="Home"
                        />
                    </Breadcrumbs>

                    <HBox id="_IDGenHBoxP3">
                        <VBox id="itemCodeBox">
                            <Label
                                id="icLabel"
                                text="title"
                            />
                            <Input
                                id="itemCode"
                                placeholder="Title of the movie"
                                editable="false"
                            />
                        </VBox>
                        <VBox id="_IDGenVBoxP3">
                            <Label
                                id="_IDGenLabelP3"
                                text="title"
                            />
                            <Input
                                id="editTitle"
                                placeholder="Title of the movie"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox11">
                            <Label
                                id="_IDGenLabelP03"
                                text="overview"
                            />
                            <Input
                                id="editOverview"
                                placeholder="Enter Overview of the movie"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox12">
                            <Label
                                id="_IDGenLabel"
                                text="releaseYear"
                            />
                            <Input
                                id="editReleaseYear"
                                placeholder="Enter release year of the movie"
                            />
                        </VBox>
                    </HBox>

                    <HBox id="_IDGenHBox4">
                        <VBox id="_IDGenVBox13">
                            <Label
                                id="_IDGenLabel8"
                                text="runtimeMin"
                            />
                            <Input
                                id="editRunTime"
                                placeholder="Enter run time(mins)"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox14">
                            <Label
                                id="_IDGenLabel9"
                                text="Reviews"
                            />
                            <Input
                                id="editReviews"
                                placeholder="Enter reviews"
                            />
                        </VBox>
                        <VBox id="_IDGenVBox15">
                            <Label
                                id="_IDGenLabel10"
                                text="cast"
                            />
                            <Input
                                id="editCast"
                                placeholder="Enter cast name"
                            />
                        </VBox>
                    </HBox>

                    <HBox id="_IDGenHBox6">
                        <VBox id="_IDGenVBox16">
                            <Label
                                id="_IDGenLabel11"
                                text="currency"
                            />
                            <Input
                                id="editCurrency"
                                placeholder="Enter currency"
                            />
                        </VBox>
                    </HBox>
                    <HBox id="_IDGenHBox7">
                        <VBox id="_IDGenVBox17">
                            <Button
                                id="_IDGenButton8"
                                text="Edit"
                                press=".onEditMe"
                            />
                        </VBox>
                    </HBox>
                </Panel>
            </VBox>

            <!-- panel 4 -->
            <Panel
                id="panel4"
                visible="false"
                headerText="MoviesX"
                expandable="true"
            >
                <f:GridList
                    id="grid"
                    items="{/Movies}"
                    inset="false"
                    growing="true"
                    growingScrollToLoad="true"
                    mode="None"
                    width="100%"
                    xmlns:cssgrid="sap.ui.layout.cssgrid"
                >
                    <f:customLayout>
                        <!-- Define how many columns per size -->
                        <cssgrid:GridBasicLayout id="_IDGenGridBasicLayout" />
                    </f:customLayout>

                    <f:items>
                        <f:GridListItem
                            id="_IDGenGridListItem1"
                            type="Active"
                            press=".onTilePress"
                            ariaLabelledBy="movieTitle"
                        >
                            <VBox
                                id="_IDGenVBox10"
                                class="movieTile"
                            >
                                <Image
                                    id="_IDGenImage1"
                                    src="{homepage}"
                                    class="MoviePoster"
                                    densityAware="false"
                                    decorative="true"
                                />
                                <!-- <Text
                                id="_IDGenText7"
                                text="{title}"
                            /> -->
                                <HBox
                                    id="_IDGenHBox8"
                                    class="movieTitleBar"
                                    justifyContent="SpaceBetween"
                                    alignItems="Center"
                                >
                                    <Text
                                        id="_IDGenText"
                                        text="{title}"
                                        class="movieTitle"
                                    />
                                    <ObjectNumber
                                        id="_IDGenObjectNumber"
                                        number="{releaseYear}"
                                        class="movieYear"
                                        unit="Year"
                                    />
                                </HBox>
                            </VBox>
                        </f:GridListItem>
                    </f:items>
                </f:GridList>
            </Panel>
        </HBox>

