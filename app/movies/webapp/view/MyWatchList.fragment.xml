<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="myWatchListDialog"
        title="🎞️ My Watchlist"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer"
        stretch="true"
        draggable="true"
        resizable="true"
    >
        <VBox
            id="_IDGenVBox23"
            class="sapUiSmallMargin"
        >
            <SegmentedButton
                id="watchListFilter"
                selectionChange="onWatchListFilterChange"
                class="sapUiSmallMarginBottom"
            >
                <items>
                    <SegmentedButtonItem
                        id="_IDGenSegmentedButtonItem4"
                        key="watched"
                        text="Already Watched?"
                    />
                    <SegmentedButtonItem
                        id="_IDGenSegmentedButtonItem5"
                        key="wantToWatch"
                        text="Want to Watch"
                    />
                </items>
            </SegmentedButton>
            
            <List
                id="watchList"
                items="{myWatchListModel>/list}"
                headerText="Movies You Want to Watch or Have Watched"
            >
                <StandardListItem
                    id="_IDGenStandardListItem1"
                    title="{myWatchListModel>title}"
                    description="{= 'Status: ' + ${myWatchListModel>status} }"
                    info="{myWatchListModel>avgRating} ⭐"
                    infoState="Success"
                />
            </List>
        </VBox>

        <endButton>
            <Button
                id="_IDGenButton18"
                text="Close"
                press="onCloseWatchListDialog"
            />
        </endButton>
        <Button
            id="_IDGenButton"
            text="Clear Watchlist"
            press="onClearWatchlist"
        />
    </Dialog>
</core:FragmentDefinition>
