<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form">

  <Dialog id="addReviewDialog" title="Add Review" stretch="true">
    <content>
      <f:SimpleForm id="_IDGenSimpleForm"
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanL="3" labelSpanM="3" emptySpanL="1" emptySpanM="1"
        columnsL="1" columnsM="1">

        <Label id="_IDGenLabel15" text="Movie" required="true"/>
        <ComboBox id="movieSel" required="true" width="100%"
                  items="{ path: '/Movies' }">
          <core:Item id="_IDGenItem1" key="{ID}" text="{title}"/>
        </ComboBox>

        <Label id="_IDGenLabel16" text="Name" required="true"/>
        <Input id="title" placeholder="Provide your name(e.g., 'John Doe')"/>

        <Label id="_IDGenLabel17" text="Rating" required="true"/>
        <RatingIndicator id="ratingInp" maxValue="5" value="4" visualMode="Half"/>

        <Label id="_IDGenLabel18" text="Comment"/>
        <TextArea id="commentInp" rows="5" placeholder="Share your thoughts..." width="100%"/>
      </f:SimpleForm>
    </content>

    <beginButton>
      <Button id="_IDGenButton11" text="Cancel" press=".onCreateCancel"/>
    </beginButton>
    <endButton>
      <Button id="_IDGenButton12" text="Submit" type="Emphasized" press=".onCreateSubmit"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
