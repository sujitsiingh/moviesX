<mvc:View
    controllerName="movies.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="reviewsPage"
        title="Write a Review"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <content>
            <VBox id="_IDGenVBox18"
                class="sapUiMediumMargin sapUiSmallMarginTopBottom"
                renderType="Bare"
            >
                <f:SimpleForm id="_IDGenSimpleForm1"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="1"
                    emptySpanM="1"
                    columnsL="1"
                    columnsM="1"
                >
                    <Label id="_IDGenLabel12"
                        text="Movie"
                        required="true"
                    />
                    <ComboBox
                        id="movie"
                        selectedKey=""
                        placeholder="Select a movie"
                        required="true"
                        width="100%"
                        items="{
                      path: '/Movies'
                    }"
                    >
                        <core:Item id="_IDGenItem"
                            key="{ID}"
                            text="{title}"
                        />
                    </ComboBox>

                    <Label id="_IDGenLabel13"
                        text="Rating"
                        required="true"
                    />
                    <RatingIndicator
                        id="rating"
                        maxValue="5"
                        value=""
                        visualMode="Half"
                        tooltip="Tap to set rating"
                    />

                    <Label id="_IDGenLabel14" text="Comment" />
                    <TextArea
                        id="comment"
                        rows="7"
                        placeholder="Write your thoughts..."
                        width="100%"
                    />
                </f:SimpleForm>

                <HBox id="_IDGenHBox9"
                    justifyContent="End"
                    class="sapUiSmallMarginTop"
                >
                    <Button id="_IDGenButton"
                        text="Cancel"
                        press=".onCancel"
                        type="Transparent"
                    />
                    <Button id="_IDGenButton4"
                        text="Submit"
                        press=".onSubmit"
                        type="Emphasized"
                        class="sapUiTinyMarginBegin"
                    />
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
