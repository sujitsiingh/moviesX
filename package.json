{
  "name": "moviesX",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-movies": "cds watch --open movies/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy moviesX --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-movies_ovp": "cds watch --open ns.moviesovp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db/movies.sqlite"
        },
        "schema_evolution": "auto"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/movies",
    "app/movies_ovp"
  ]
}
